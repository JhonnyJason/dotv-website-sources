.destraighten-black
    display grid
    grid-template-columns: 15px auto 15px
    background-color: cd-blackbackground

.destraighten-transparent
    display grid
    grid-template-columns: 15px auto 15px
    background-color: transparent


// dimensions
.transparent-block-25
.white-block-25
.corner-25
    width: 100%
    height 25px

.transparent-block-50
.white-block-50
.corner-50
    width: 100%
    height 50px

.transparent-block-100
.white-block-100
.corner-100
    width: 100%
    height 100px

// colors
.corner-25
.corner-50
.corner-100
    color white
    svg
        height inherit
        width inherit

.white-block-25
.white-block-50
.white-block-100
    background-color white

.transparent-block-25
.transparent-block-50
.transparent-block-100
    background-color transparent

@media screen and (min-width: paddingless-inner-content-width)
    .destraighten-black
        grid-template-columns: auto max-content-width auto

    .destraighten-transparent
        grid-template-columns: auto max-content-width auto
