/*====================================================================
mobile styles
====================================================================*/
@media screen and (max-width: 570px)
    .repo
        text-align: center
        margin-left: 0
        // border-top solid 2px cd-darkblue
        flex-direction: column
        padding-left: 0
    .main-content-block
        flex-direction column
    .avatar
        margin auto
        margin-bottom 30px
    .middle-block
        text-align: center
        margin auto 

    .right-block
        text-align: center
        margin-left: 0
    
    .flags-line
        width: 100%



