/*====================================================================
hero card styles
====================================================================*/
.person-card
    background-color: #024
    color cd-foreground
    padding 20px
    border-radius: 3px
    box-shadow: 0 0 15px #024
    margin-bottom 80px

.main-content-block
    display flex
    margin-bottom 20px
    flex-wrap: wrap
    align-items: center

.avatar
    flex-shrink: 0
    border-radius: 50%
    width: 200px
    height 200px
    overflow: hidden        
    border solid 3px #ffffff22
    align-self: flex-start
    img
        width inherit

.middle-block
    flex-shrink: 0
    text-align right
    margin-left: 60px
    width: 220px

.right-block
    margin-left auto
    margin-top auto
    text-align: right
    position relative
    a
        text-decoration: none
        margin-right 7px
    svg
        width 50px
        height 50px

/*====================================================================
hero card styles
====================================================================*/
.hero-card
    @extends .person-card
    .main-content-block
        justify-content: space-between
        max-width: 600px
        margin auto
        margin-bottom 20px
        margin-top: 20px
        flex-wrap: nowrap
        padding 0 15px

    .top-block
        background-color: white
        color cd-darkblue
        border-radius: 3px
        padding 10px 0

    .avatar
        border: solid 3px cd-darkblue
