#evolve
    h2
        border-bottom solid 2px
        padding-bottom 7px
        max-width 60%

    .gap
        height 840px
 
    .evolve-decoration
        position absolute
        left calc(50% + 250px)
        top 50%
        font-size 250px
        transform: translate(-50%, -50%)
        height 300px
        width 300px
        // background-color #024
        // border solid 3px
        // border-radius: 50%

    #important-things-map
        width: 100%
        height: 62vw
        max-height: 360px
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

    #underline
        padding-bottom 20px
        border solid 3px
        border-top none
        // border-right none
        border-radius: 3px

@media  screen and (max-width: decoration-maximum-mobile-width)
    #evolve
        .evolve-decoration
            display: block
            position relative
            top 0
            left 0
            transform: none
            margin auto
            margin-bottom 50px