#join-us-block    
    padding-bottom 200px
    overflow: hidden

.under-construction
    font-weight: bold

#join-options
    display flex
    justify-content: space-around
    margin-top 100px

#join-options > *
    text-align: center
    svg
        height 120px
        width 120px

#creepy-monkey
    position absolute
    top -40px
    left 75%
    transform translateX(-50%) rotate(10deg)

#cute-sun
    position absolute
    top 20px
    width: 120px
    height 120px
    left 75%
    transform translateX(-50%) scale(-1,1)

#sun-icon
    position absolute
    // top -40px
    top 50px
    width: 120px
    height 120px
    left 75%
    transform translateX(-50%) scale(-1,1)

#bottom-join-us-decoration
    position absolute
    left 50%
    bottom -20px
    transform: translateX(-50%)
    width 100%
    max-width: 600px
    max-height: 200px
    color #024

.cyou
    text-align: right
    max-width 100%

@media screen and (max-width: 636px)
    #join-options
        flex-direction: column