available-green = #78d569
booked-red = #e53e4e

#availability-indicator
    text-align: center
    text-transform: uppercase
    font-weight: bold
    padding 10px 0
    
.available
    background-color available-green
    // border-color #78D965
    box-shadow: 0px 0px 8px 1px available-green

.booked
    background-color booked-red
    // border-color #78D965
    box-shadow: 0px 0px 8px 1px booked-red

#availability-calendar
    position absolute
    width: 280px
    height 200px
    left 75%
    transform: translateX(-50%)
    bottom 20px

#legal-documents
    // position absolute
    // top 56px
    // left 65%
    opacity 0.5
    margin-top: 36px
    
    ul
        list-style: none
        padding 0
        line-height: 160%
        font-size 10pt

#company
    a
        cursor pointer


@media screen and (max-width: decoration-maximum-mobile-width)
    #availability-calendar
        position relative
        left 50%
        transform: translateX(-50%)
        bottom 0
