#top-section-decoration
    position absolute
    left calc(50% + 250px)
    top 50%
    font-size 250px
    transform: translate(-50%, -50%)
    height 300px
    width 300px
    // background-color #024
    // border solid 3px
    // border-radius: 50%

#human-evolution-graphics
    display: block
    position absolute
    bottom -30px
    left 50%
    transform translateX(-50%)

#important-things-map
    width: 100%
    height: 62vw
    max-height 400px
    // margin 50px 0

#main-statement
    text-align: center
    margin-top 50px
    margin-bottom 0
    padding-top 20px
    border solid 3px
    border-bottom none
    border-radius: 3px

#underline
    padding-bottom 20px
    border solid 3px
    border-top none
    border-radius: 3px

@media  screen and (max-width: 830px) 
    #top-section-decoration
        display: block
        position relative
        top 0
        left 0
        transform: none
        margin auto
        margin-bottom 50px