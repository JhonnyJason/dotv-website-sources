#services
    h2
        border-bottom solid 2px
        padding-bottom 7px
        max-width 60%

    .service-decoration
        position absolute
        left calc(50% + 250px)
        top 50%
        font-size 250px
        transform: translate(-50%, -50%)
        height 300px
        width 300px
        // background-color #024
        // border solid 3px
        // border-radius: 50%

    #assistance-decoration
        height 400px
        width 400px
    
    #platform-decoration
        height 400px

@media  screen and (max-width: decoration-maximum-mobile-width) 
    #services
        .service-decoration
            display: block
            position relative
            top 0
            left 0
            width: 100vw
            padding 50px
            box-sizing: border-box
            transform: none
            margin auto
            margin-bottom 50px
            background-color cd-darkblue
            color white
        #assistance-decoration
            height 100vw
            width 100vw
            padding 30px
