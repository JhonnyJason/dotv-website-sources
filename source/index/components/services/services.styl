#services
    h2
        border-bottom solid 2px
        padding-bottom 7px
        max-width 60%

    .service-decoration
        position absolute
        left calc(50% + 250px)
        top 50%
        font-size 250px
        transform: translate(-50%, -50%)
        height 300px
        width 300px
        // background-color #024
        // border solid 3px
        // border-radius: 50%

    #assistance-decoration
        height 400px
        width 400px
    
    #platform-decoration
        height 400px

@media  screen and (max-width: 830px) 
    .service-decoration
        display: block
        position relative
        top 0
        left 0
        transform: none
        margin auto
        margin-bottom 50px