// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-bright= #fff
cd-darkblue = #024
cd-blackbackground = #0009

cd-foreground = cd-bright
cd-background = cd-darkblue


/*==========================================================
Global Variables
==========================================================*/
max-content-width = 1024px
inner-content-width = 750px
mobile-side-padding = 15px

element-background = #0249
chosen-link-color = #666

/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background
    color cd-foreground
    font-family: Arial, Helvetica, sans-serif
    text-align: center
    font-size: 12pt
    line-height 130%
    letter-spacing: 0.5pt
    width 100%
    overflow-y: auto

h1
    font-size: 32pt
    margin-bottom 56px
    line-height: 120%
h2
    font-size: 21pt
    margin-bottom 42px
    line-height: 120%
h3
    font-size: 17pt
    margin-bottom 42px

p,ul
    font-size: 15pt
    margin-bottom 28px
    max-width 500px
    line-height 140%
a
    text-decoration: underline
    text-underline-offset: 5px

nav
    font-size 16pt
    line-height 150%

ul
    list-style-type: circle
    padding-left 20px

/*==========================================================
Global Classes Styles
==========================================================*/
.inner-content
    margin auto
    max-width: inner-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

.max-content
    margin auto
    max-width: max-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding


paddingless-max-content-width = (max-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-max-content-width)
    .max-content
        padding-left: 0
        padding-right: 0

paddingless-inner-content-width = (inner-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-inner-content-width)
    .inner-content
        padding-left: 0
        padding-right: 0

.fuzzy-black
    background-color cd-blackbackground
    box-shadow: 0 0 1em #000

.noselect
    -webkit-touch-callout: none
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none

.noselect > *
    -webkit-touch-callout: none
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none
    pointer-events: none

.block
    position relative
    padding 56px 0
    background-color cd-bright
    color cd-darkblue
    text-align: left
    // opacity: 0.6
    
.black-block
    @extends .fuzzy-black
    position relative
    padding 56px 0
    text-align: left
    // opacity: 0.6


.one-line-centered-block
        p   
            margin auto
            text-align: center

.multi-line-centered-block
        p   
            margin-left auto
            margin-right auto
            text-align: center

.gap
    position relative
    height 420px
    width 100%
    p
        font-size 19pt 
        position absolute
        text-align: center
        top 50%
        left 50%
        transform translate(-50%, -50%)
        min-width 300px


.todo
    text-align: center
    width 100%
    color #999
    margin-top 56px
    margin-bottom 91px
    max-width: none
    background-color #eee

.black-block
    .todo
        background-color #eee1




.flags-line
    display flex
    width 61.2%
    
.flags-line > *
    flex-grow: 1

.black-strip
    background-color: black
    height 10px

.white-strip
    background-color white
    height 10px
