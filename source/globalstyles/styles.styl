// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-background-light = white
cd-background-dark = black
cd-foreground-light = white
cd-foreground-dark = black

cd-red-light = #fff5f5
cd-green-light = #f5fff5
cd-blue-light = #f5f5ff

cd-red-dark = #100000
cd-green-dark = #001000
cd-blue-dark = #000010


/*==========================================================
Global Variables
==========================================================*/
max-content-width = 1024px
inner-content-width = 750px
mobile-side-padding = 15px

/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background-dark
    color cd-foreground-light
    font-family: Arial, Helvetica, sans-serif
    text-align: center
    font-size: 12pt
    line-height 130%
    letter-spacing: 0.5pt
    width 100%
    overflow-y: auto

h1
    font-size: 32pt
    margin-bottom 56px
    line-height: 120%
h2
    font-size: 21pt
    margin-bottom 42px
    line-height: 120%
h3
    font-size: 17pt
    margin-bottom 42px

p
    font-size: 15pt
    margin-bottom 28px
    max-width 500px
    line-height 140%
a
    text-decoration: underline
    text-underline-offset: 5px

nav
    font-size 16pt
    line-height 150%



/*==========================================================
Global Classes Styles
==========================================================*/
.inner-content
    margin auto
    max-width: inner-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

.max-content
    margin auto
    max-width: max-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding


paddingless-max-content-width = (max-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-max-content-width)
    .max-content
        padding-left: 0
        padding-right: 0

paddingless-inner-content-width = (inner-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-inner-content-width)
    .inner-content
        padding-left: 0
        padding-right: 0


.block
    padding 56px 0
    background-color white
    color #024
    text-align: left
    opacity: 0.97
    
.black-block
    padding 56px 0
    background-color black
    color white
    text-align: left
    opacity: 0.97
    box-shadow: 0 0 1em black
.blue-block
    padding 56px 0
    background-color #024
    color white
    text-align: left
    opacity: 0.97
.gap
    position relative
    height 420px
    width 100%
    p
        font-size 19pt 
        position absolute
        text-align: center
        top 50%
        left 50%
        transform translate(-50%, -50%)
        